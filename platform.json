      "owner": "espressif",
      "version": "8.4.0+2021r2-patch5"
    },
    "toolchain-riscv32-esp": {
      "type": "toolchain",
      "optional": true,
      "owner": "espressif",
      "version": "8.4.0+2021r2-patch5",
      "optionalVersions": ["13.2.0+20240530"]
    },
    "toolchain-xtensa-esp-elf": {
      "type": "toolchain",
      "optional": true,
      "owner": "platformio",
      "version": "13.2.0+20240530"
    },
    "toolchain-esp32ulp": {
      "type": "toolchain",
      "optional": true,
      "owner": "platformio",
      "version": "~1.23800.0"
    },
    "tool-xtensa-esp-elf-gdb": {
      "type": "debugger",
